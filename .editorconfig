# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation for web files
[*.{js,jsx,ts,tsx,json,css,scss,html,vue,yaml,yml}]
indent_style = space
indent_size = 2

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# Tab indentation for Go files
[*.go]
indent_style = tab

# 2 space indentation for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# 4 space indentation for shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Terraform files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2
