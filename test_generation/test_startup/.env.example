# Test Startup Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=Test Startup
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://test_startup_user:test_startup_password@localhost:5432/test_startup_db
DATABASE_ECHO=false

# For production, use connection pooling:
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=30
# DATABASE_POOL_TIMEOUT=30

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# AI SERVICE CONFIGURATIONS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=console
# EMAIL_BACKEND=smtp

# SMTP Configuration (when EMAIL_BACKEND=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@test_startup.com
SMTP_FROM_NAME=Test Startup

# For development with MailHog
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USE_TLS=false

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================
# GitHub Integration (optional)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SendGrid (for production emails)
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn-url

# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=test_startup
APM_SERVER_URL=http://localhost:8200

# Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ASYNC_TASKS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_RATE_LIMITING=true
FEATURE_CACHING=true
FEATURE_METRICS=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Debug settings
SQLALCHEMY_ECHO=false
WERKZEUG_DEBUG_PIN=off

# Testing
TEST_DATABASE_URL=postgresql://test_startup_user:test_startup_password@localhost:5432/test_startup_test_db

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=development
REACT_APP_SENTRY_DSN=your-frontend-sentry-dsn
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_TAG=latest
COMPOSE_PROJECT_NAME=test_startup

# =============================================================================
# CLOUD PROVIDER SETTINGS (for deployment)
# =============================================================================
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket-name

# GCP
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Azure
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# File storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# =============================================================================
# SECURITY SCANNING
# =============================================================================
SECURITY_SCAN_ENABLED=true
VULNERABILITY_DB_UPDATE=daily
SECURITY_REPORT_EMAIL=security@test_startup.com